        type="text"
        name="system.misery6.verse"
        value="{{data.system.misery6.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>                
    <div class="seven-seven">
      <div class="numbers">7:7</div>
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
  </div>

  {{#if data.system.seventhMiseryClass}}
    <div class="endtimes">
      The seventh seal is broken for the seventh and final time.
      The game and your lives end here. <span class="burn-the-book">Burn the book.</span>
    </div>
  {{else}}
    <div class="agony-block">
      <div class="agony-title">When will all this agony end?</div>
      <select name="system.miseryDie">
        {{#select data.system.miseryDie}}
          <option value="1d100">Years of pain (d100)</option>
          <option value="1d20">A bleak half-year (d20)</option>
          <option value="1d10">A fall in anguish (d10)</option>
          <option value="1d6">A cruel month (d6)</option>
          <option value="1d2">The end is nigh! (d2)</option>
        {{/select}}
        </select>
    </div>

    <div class="button-block">
      <button class="sheet-button misery-button">Roll for Misery</button>
    </div>
  {{/if}}
  
</form>
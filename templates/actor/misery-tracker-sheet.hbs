<form class="{{cssClass}} {{data.system.miseryAnimationClass}} {{data.system.seventhMiseryClass}}" autocomplete="off">
  <div class="title">
      <input
        class="actor-name"
        name="name"
        type="text"
        value="{{actor.name}}"
        placeholder=""
        spellcheck="false"
      />
  </div>      
  <div class="miseries">
    <div class="misery-block {{data.system.misery1.cssClass}}">
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}          
      <input
        type="text"
        name="system.misery1.psalm"
        value="{{data.system.misery1.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery1.verse"
        value="{{data.system.misery1.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />        
    </div>
    <div class="misery-block {{data.system.misery2.cssClass}}">
      <input
        type="text"
        name="system.misery2.psalm"
        value="{{data.system.misery2.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery2.verse"
        value="{{data.system.misery2.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery3.cssClass}}">
      <input
        type="text"
        name="system.misery3.psalm"
        value="{{data.system.misery3.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery3.verse"
        value="{{data.system.misery3.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery4.cssClass}}">
      <input
        type="text"
        name="system.misery4.psalm"
        value="{{data.system.misery4.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery4.verse"
        value="{{data.system.misery4.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery5.cssClass}}">
      <input
        type="text"
        name="system.misery5.psalm"
        value="{{data.system.misery5.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 
      <input
        type="text"
        name="system.misery5.verse"
        value="{{data.system.misery5.verse}}"
        class="verse"
        placeholder="#"
        data-dtype="Number"
      />      
      {{#times 50}}
        <div class="particle"></div>
      {{/times}}      
    </div>
    <div class="misery-block {{data.system.misery6.cssClass}}">
      <input
        type="text"
        name="system.misery6.psalm"
        value="{{data.system.misery6.psalm}}"
        class="psalm"
        placeholder="#"
        data-dtype="Number"
      />     
      <span class="colon">:</span> 

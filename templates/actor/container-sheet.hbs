<form class="{{cssClass}} flexcol" autocomplete="off">
  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-col1">
      <img
        class="profile-img"
        src="{{actor.img}}"
        data-edit="img"
        title="{{actor.name}}"
      />
    </div>
    <div class="header-gutter-col"></div>
    <div class="header-col2">
      <div class="name-row">
        <input
          class="actor-name container-name"
          name="name"
          type="text"
          value="{{actor.name}}"
          placeholder="{{ localize 'MB.Name' }}"
        />
      </div>
      <div class="actor-subtitle">
        <h4 class="actor-type">{{actor.type}}</h4>
      </div>
      <div class="holding-row">
        <span class="stat-label container-label">{{ localize "MB.ContainerHolding" }}:</span>
        <span class="stat-value">{{data.system.containerSpace}}</span>
        /
        <span class="stat-value">{{data.system.capacity.max}}</span>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{ localize "MB.TabDescription" }}</a>
    <a class="item" data-tab="details">{{ localize "MB.TabDetails" }}</a>
    <a class="item" data-tab="contents">{{ localize "MB.TabContents" }}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor data.system.description target="system.description" button=true
      owner=owner editable=true}}
    </div>

    {{!-- Details Tab --}}
    <div class="tab" data-group="primary" data-tab="details">
      <div class="form-group">
        <label>{{ localize "MB.ItemPrice" }}:</label>
        <input
          type="text"
          name="system.price"
          value="{{data.system.price}}"
          placeholder="2"
          data-dtype="Number"
        />
      </div>
      <div class="form-group">
        <label>{{ localize "MB.ItemCapacity" }}:</label>
        <input
          name="system.capacity.max"
          type="text"
          value="{{data.system.capacity.max}}"
          placeholder="10"
          data-dtype="Number"
        />
      </div>
    </div>

    {{!-- Contents Tab --}}
    <div class="tab equipment-tab" data-group="primary" data-tab="contents">
      <ol class="items-list equipment-list">
        {{> "systems/morkborg/templates/actor/common/actor-equipment-list.hbs" }}
      </ol>
    </div>
  </section>
</form>
